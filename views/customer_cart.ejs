<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Cart - Customer Dashboard</title>
    <link rel="stylesheet" href="/css/customer_cart.css" />
  </head>
  <body>
    <!-- Sidebar -->
    <div class="sidebar">
      <div class="logo">
        <div class="logo-icon">ğŸ›’</div>
        <span>SHOP EASY</span>
      </div>

      <nav class="nav">
        <a href="/customer/dashboard" class="nav-item">
          <span class="nav-icon">ğŸ </span>
          <span>Dashboard</span>
        </a>
        <a href="/customer/cart" class="nav-item active">
          <span class="nav-icon">ğŸ›’</span>
          <span>My Cart</span>
        </a>
        <a href="/customer/orders" class="nav-item">
          <span class="nav-icon">ğŸ“¦</span>
          <span>My Orders</span>
        </a>
        <a href="#" class="nav-item">
          <span class="nav-icon">âš™ï¸</span>
          <span>Settings</span>
        </a>
      </nav>

      <form action="/logout" method="POST">
        <button type="submit" class="logout-btn">
          <span>ğŸšª</span>
          <span>Logout</span>
        </button>
      </form>
    </div>

    <!-- Main Content -->
    <div class="main-content">
      <div class="header">
        <h1>My Shopping Cart</h1>
        <div class="user-info">
          <div class="notification-icon">ğŸ””</div>
        </div>
      </div>

      <% if (message) { %>
      <div class="alert"><%= message %></div>
      <% } %>

      <div class="cart-container">
        <% if (!products || products.length === 0) { %>
        <div class="empty-cart">
          <div class="empty-cart-icon">ğŸ›’</div>
          <h2>Your cart is empty</h2>
          <p>Add some products to get started!</p>
        </div>
        <% } else { %>
        <table>
          <thead>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(item => { %>
            <tr>
              <td class="product-name"><%= item.name %></td>
              <td>
                <form action="/customer/cart/update" method="POST">
                  <input
                    type="hidden"
                    name="product_id"
                    value="<%= item.id %>"
                  />
                  <input
                    type="number"
                    name="quantity"
                    value="<%= item.quantity_in_cart %>"
                    min="1"
                  />
                  <button type="submit" class="btn-update">Update</button>
                </form>
              </td>
              <td class="price">$<%= item.price %></td>
              <td>
                <form action="/customer/cart/remove" method="POST">
                  <input
                    type="hidden"
                    name="product_id"
                    value="<%= item.id %>"
                  />
                  <button type="submit" class="btn-delete">Delete</button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <div class="checkout-section">
          <form action="/customer/cart/checkout" method="POST">
            <button type="submit" class="btn-checkout">
              Proceed to Checkout
            </button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
